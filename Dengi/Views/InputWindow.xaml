<Window x:Class="Dengi.Views.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Dengi.Views"
        mc:Ignorable="d"
        Title="InputWindow" Height="300" Width="300">
    <Grid VerticalAlignment="Top" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="40" Margin="6">Input Data</Label>
        <TextBox Grid.Row="1" Height="80"></TextBox>
        <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="6">
            <Button Margin="6" BorderThickness="0" Width="100" Height="100" Background="Chartreuse">Ok</Button>
            <Button Margin="6" BorderThickness="0" Width="100" Height="100" Background="IndianRed">Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
